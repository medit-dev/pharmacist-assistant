{
  "name": "pharmacist-assistant",
  "version": "1.0.0",
  "description": "GenAI Pharmacist Assistant",
  "author": "Andrzej Konarski",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medit-dev/pharmacist-assistant.git"
  },
  "engines": {
    "node": ">=22.11.0"
  },
  "scripts": {
    "build:assistant": "nest build --config ./src/entrypoints/assistant/nest-cli.json",
    "start:assistant:dev": "nest start --watch --config ./src/entrypoints/assistant/nest-cli.json",
    "build:embeding": "nest build --config ./src/entrypoints/embedding/nest-cli.json",
    "start:embeding:dev": "nest start --watch --config ./src/entrypoints/embedding/nest-cli.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@huggingface/inference": "2",
    "@langchain/community": "^0.3.24",
    "@langchain/core": "^0.3.29",
    "@langchain/openai": "^0.3.17",
    "@langchain/pinecone": "^0.1.3",
    "@langchain/textsplitters": "^0.1.0",
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@pinecone-database/pinecone": "^4.1.0",
    "@sentry/node": "^8.48.0",
    "@sentry/profiling-node": "^8.48.0",
    "class-transformer": "0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.5",
    "csv-parse": "^5.6.0",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.1",
    "helmet": "^8.0.0",
    "nest-commander": "^3.15.0",
    "nest-typed-config": "^2.9.3",
    "nestjs-pino": "^4.2.0",
    "pino-http": "^10.3.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.12",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.15.1",
    "eslint-plugin-perfectionist": "^4.6.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "packageManager": "pnpm@10.0.0"
}
